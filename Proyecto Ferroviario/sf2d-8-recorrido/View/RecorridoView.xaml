<UserControl x:Class="SF2D.View.RecorridoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SF2D.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Imagen de fondo (tren) -->
        <Image x:Name="Recorrido" 
               Stretch="Fill"/>

        <!-- Imagen superpuesta (cabina) 
        <Image x:Name="cabinaImg" Stretch="Uniform" 
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Bottom" 
               Panel.ZIndex="2" Margin="0"/>-->
    </Grid>
</UserControl>
